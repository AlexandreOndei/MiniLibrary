@model List<MiniLibrary.Entity.Book>

<h2>Books</h2>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">ISBN</th>
            <th scope="col">Price</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            var item = Model[i];

            <tr>
                <th scope="row">@(i + 1)</th>
                <td>@item.Title</td>
                <td>@item.Isbn</td>
                <td>@(item.Price.HasValue ? $"${item.Price?.ToString("#,##0.#")}" : "")</td>
                <td>
                    <a href="/Book/Edit/@item.Id" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Book/Add" class="btn btn-primary">New Book</a>
<a href="/Home" class="btn btn-secondary">Go back</a>